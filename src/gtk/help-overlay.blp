using Gtk 4.0;

ShortcutsWindow help_overlay {
	modal: true;
	ShortcutsSection {
		section-name: "shortcuts";
		// max-height: 8;
		ShortcutsGroup {
			title: _("General");
			ShortcutsShortcut {
				title: _("Open Menu");
				action-name: "app.open-menu";
			}
			ShortcutsShortcut {
				title: _("Show Shortcuts");
				action-name: "win.show-help-overlay";
			}
			ShortcutsShortcut {
				title: _("Quit");
				action-name: "app.quit";
			}
		}
	}
}
