{
	"id": "io.github.flattool.Warehouse",
	"runtime": "org.gnome.Platform",
	"runtime-version": "49",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": [
		"org.freedesktop.Sdk.Extension.typescript",
		"org.freedesktop.Sdk.Extension.node22"
	],
	"build-options": {
		"append-path": "/usr/lib/sdk/node22/bin:/usr/lib/sdk/typescript/bin"
	},
	"command": "io.github.flattool.Warehouse",
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=wayland",
		"--talk-name=org.freedesktop.Flatpak",
		"--filesystem=/var/lib/flatpak/:ro",
		"--filesystem=/var/lib/flatpak/app/:ro",
		"--filesystem=~/.local/share/flatpak/:ro",
		"--filesystem=~/.var/app/",
		"--filesystem=host-etc",
		"--filesystem=host"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "jasmine-gjs",
			"buildsystem": "meson",
			"sources": [
				{
					"type": "git",
					"url": "https://github.com/ptomato/jasmine-gjs.git",
					"branch": "master"
				}
			],
			"cleanup": ["*"]
		},
		{
			"name": "warehouse",
			"builddir": true,
			"buildsystem": "meson",
			"config-opts": ["-Dprofile=development"],
			"sources": [
				{
					"type": "dir",
					"path": ".."
				}
			],
			"run-tests": true,
			"test-rule": "test"
		}
	]
}
